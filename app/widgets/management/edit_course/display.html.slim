= widget_div do
  - if @message
    div{data-dismiss="alert" class='alert alert-info'}
      a{href='#' class='close'} Ã—
      = @message

  = semantic_form_for @course, remote: true, url: url_for_event(:submit, :id => @course.id), :html => {:class=>'form-horizontal'} do |f|
    = f.semantic_errors
    = f.inputs 'Course' do
      = f.input :full_name, :placeholder => 'Introduction to computer Science', :input_html => {:class=>'row-fluid'}
      = f.input :abbreviation, :placeholder => 'CS-101', :input_html => {:class=>'row-fluid'}
      = f.input :description, :as => 'text', input_html: {rows: 4, :class=>'row-fluid' }
    = f.actions do
      = f.action :submit, label: 'Save new course', button_html: { disable_with: "Please wait..." }