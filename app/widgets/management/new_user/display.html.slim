= widget_div do

  = breadcrumb('Management', 
    link_to('Users', management_users_path), 
    link_to('New User', new_management_user_path))

  - if @message
    div{data-dismiss="alert" class='alert alert-info'}
      a{href='#' class='close'} ×
      = @message
      
  = semantic_form_for @user, remote: true, url: url_for_event(:submit) do |f|
    = f.semantic_errors
    = f.inputs 'New User' do
      = f.input :first_name, :placeholder => 'Gonzalo', :input_html => {:class=>'span4', :autofocus=> "autofocus"}
      = f.input :last_name, :placeholder => 'Rodríguez', :input_html => {:class=>'span4'}
      = f.input :dni, :label => 'DNI', :input_html => {:class=>'span4'}
      = f.input :email, :input_html => {:class=>'span4'}
    = f.actions do
      = f.action :submit, label: 'Save new student', button_html: { disable_with: "Please wait..." }